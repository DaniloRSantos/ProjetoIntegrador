@model Projeto_Integrador.Models.Database.PESSOA
@{
    ViewBag.Title = "Cadastro de Ficha";
    Layout = "~/Views/Shared/_LayoutSistemaAdm.cshtml";
}

<h2>Cadastro de Ficha</h2>
<script>
    $(document).ready(function () {

        $("#btn-PegarCPFFicha").click(function () {
            var NumCpf = $("#CPF_PESSOA").find(":selected").attr('value');
            console.log(NumCpf);
            $.ajax({
                dataType: "json",
                type: "POST",
                url: "/Ficha/CadastrarAluExpecifico",
                data: { CPF: NumCpf }
            }).done(function (data) {
                if (data == true) {
                    console.log("Valor Vazio")
                } else {
                    console.log("Valor ok")
                }
            });
        })
    });
</script>




    <div class="form-group">
        @Html.LabelFor(model => model.CPF_PESSOA, "Cpf do Aluno", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CPF_PESSOA", null, htmlAttributes: new { @class = "form-control" })
            @*@Html.DropDownList("CPF_PESSOA", new SelectList(), "Select Gender", new { @class = "form-control" })*@
            @Html.ValidationMessageFor(model => model.CEP_PESSOA, "", new { @class = "text-danger" })
        </div>
    </div>


    <input id="btn-PegarCPFFicha" class="button-form" type="submit" value="Finalizar">
