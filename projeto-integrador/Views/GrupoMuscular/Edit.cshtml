@model Projeto_Integrador.Models.Database.GRUPO_MUSCULAR
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutSistemaAdm.cshtml";
}
<h2>Editar Musculo</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.COD_GRUPOMUSCULAR)
        <div class="form-group">
            @Html.LabelFor(model => model.NOM_GRUPOMUSCULAR, "Grupo Muscular", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.NOM_GRUPOMUSCULAR, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOM_GRUPOMUSCULAR, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-0 col-md-12">
                @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-success" })
                <input type="submit" value="Salvar" class="btn btn-primary col-md-offset-6" />
            </div>
        </div>
    </div>
}
