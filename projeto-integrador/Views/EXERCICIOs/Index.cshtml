@model IEnumerable<Projeto_Integrador.Models.Database.EXERCICIO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSistemaAdm.cshtml";
}
<h2>Exercícios Cadastrados</h2>
<p>
    @Html.ActionLink("Cadastrar", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Nome Exercicio
        </th>
        <th>
            Sigla Exercicio
        </th>
        <th>
            Status
        </th>
        <th>
            Tipo
        </th>
        <th>
            Grupo Muscular
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NOM_EXERCICIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SIG_EXERCICIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.STA_EXERCICIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TIP_EXERCICIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GRUPO_MUSCULAR.NOM_GRUPOMUSCULAR)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.COD_EXERCICIO }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Detalhes", "Details", new { id = item.COD_EXERCICIO }, new { @class = "btn btn-success" })
                @Html.ActionLink("Excluir", "Delete", new { id = item.COD_EXERCICIO }, new { @class = "btn btn-danger" })
            </td>

        </tr>
    }
</table>
<div>
    <a href="~/GrupoMuscular/Create" class="btn btn-primary">
        Cadastrar Grupo Muscular
    </a>
</div>
