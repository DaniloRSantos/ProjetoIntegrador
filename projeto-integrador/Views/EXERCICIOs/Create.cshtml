@model Projeto_Integrador.Models.Database.EXERCICIO
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutSistemaAdm.cshtml";
}
<h2>Cadastrar Exercício</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.COD_EXERCICIO, "", htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10 col-md-offset-8">
                @Html.EditorFor(model => model.COD_EXERCICIO, new { htmlAttributes = new { @class = "form-control", @placeholder = "Codigo Exercicio" } })
                @Html.ValidationMessageFor(model => model.COD_EXERCICIO, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.COD_GRUMUSC, "", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10 col-md-offset-6">
                @Html.DropDownList("COD_GRUMUSC", null, htmlAttributes: new { @class = "form-control", @placeholder = "Codigo Grupo Muscular" })
                @Html.ValidationMessageFor(model => model.COD_GRUMUSC, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-10 ">
            @Html.LabelFor(model => model.NOM_EXERCICIO, "", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 col-md-offset-2">
                @Html.EditorFor(model => model.NOM_EXERCICIO, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nome do Exercicio" } })
                @Html.ValidationMessageFor(model => model.NOM_EXERCICIO, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-10">
            @Html.LabelFor(model => model.SIG_EXERCICIO, "", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 col-md-offset-2">
                @Html.EditorFor(model => model.SIG_EXERCICIO, new { htmlAttributes = new { @class = "form-control", @placeholder = "Sigla do Exercicio" } })
                @Html.ValidationMessageFor(model => model.SIG_EXERCICIO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-10">

            @Html.LabelFor(model => model.STA_EXERCICIO, "", htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10  col-md-offset-2">
                <h4>Status</h4>

                @Html.EditorFor(model => model.STA_EXERCICIO, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "Status" } })
                @Html.ValidationMessageFor(model => model.STA_EXERCICIO, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="form-group col-md-10 ">
            @Html.LabelFor(model => model.TIP_EXERCICIO, "", htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10 col-md-offset-2">
                @Html.EditorFor(model => model.TIP_EXERCICIO, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tipo de Exercicio" } })
                @Html.ValidationMessageFor(model => model.TIP_EXERCICIO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-success" })

                <input type="submit" value="Cadastrar" class="btn btn-primary  col-md-offset-6" />
            </div>
        </div>
    </div>

}
<div>

</div>
