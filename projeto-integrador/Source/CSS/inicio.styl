.posicao-inicio, .exercicio-inicio
	background-color: $branco
	border-radius: 5px
	margin-bottom: 20px

	p:first-child
		display: block
		border-bottom: 1px solid $cinza-90

	p
		text-align: center
		font-weight: 300
		padding-top: 10px
		padding-bottom: 10px
		display: inline-block
		padding-left: 10px
		padding-right: 40px

	@media (max-width: $tela-grande)
		p
			padding-left: 5px
			padding-right: 5px
