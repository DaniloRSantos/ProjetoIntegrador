@import url('https://fonts.googleapis.com/css?family=Roboto:300,400');

*
	padding: 0
	margin: 0
	box-sizing: border-box
	color: $cinza-texto
	font-family: $roboto
	-webkit-font-smoothing: antialiased !important
    -moz-osx-font-smoothing: grayscale !important

html
	width: 100%
	height: 100%

.navbar
	.logotipo
		a
			text-align: center
			padding-top: 20px
			padding-bottom: 20px
			font-size: 25px
			text-transform: uppercase
			font-weight: $light
			display: block
			border-bottom: 1px solid rgba(255, 255, 255, 0.5)

	img
		width: 100px
		border-radius: 50%
		display: block
		margin: 10px auto 20px auto

	.menu-horizontal-superior, .menu-horizontal-inferior
		display: none

	.menu-lateral
		height: 100%
		background-color: $azul-40
		width: 260px
		display: block
		top: 0
		left: 0
		position: absolute

		ul
			display: block
			list-style-type: none

			li
				width: 90%
				background-color: rgba(255, 255, 255, 0.15)
				margin: 10px auto 0px auto
				border-radius: 5px

				&:hover
					transition: 0.1s linear
					background-color: rgba(255, 255, 255, 0.3)

				i
					display: block
					float: left
					font-size: 19px
					color: $branco
					padding: 2px 17px 0px 8px
					font-weight: $light

				a
					display: block
					padding: 10px
					font-size: 20px
					font-weight: $light

		a
			color: $branco
			text-decoration: none

	.icone-rodape
		position: absolute
		margin-left: 13px !important;
		bottom: 10px

	@media (max-width: $tela-grande)
		.menu-lateral
			display: none

		.menu-horizontal-superior
			display: block
			width: 100%
			height: 50px
			background-color: $azul-40
			
			p
				font-weight: $light
				color: $branco
				display: table
				margin-left: 50%
				transform: translateX(-50%)
				padding: 13px 0px
				font-size: 20px
				text-transform: uppercase

			a
				display: block
				float: right
				padding: 12px 15px

				i
					color $branco
					font-size: 25px

		.menu-horizontal-inferior
			display: block
			position: absolute
			width: 100%
			height: 50px
			bottom: 0px
			background-color: $azul-40

			> div
				height: 100%
				margin: 0px !important
				padding-left: 0px !important
				padding-right: 0px !important

			i
				font-size: 22px
				font-weight: $light
				text-align: center
				color: $branco
				display: table
				margin: 5px auto

			p
				font-size: 12.5px
				text-align: center
				color: $branco
				font-weight: $light
				text-transform: uppercase

.tab-atual
	background-color: rgba(255, 255, 255, 0.15)
	height: 100%

.conteudo
	margin-left: 300px
	margin-top: 40px
	margin-right: 40px

	@media (max-width: $tela-grande)
		margin-left: auto
		margin-right: auto
		margin-top: 10px
		width: 85%